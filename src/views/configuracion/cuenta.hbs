<div class="container-fluid">
    <div class="parallax-cuenta" data-speed="0.5" alt=""></div>       
    <form action="/cuenta" method="POST" class="form-account">
        <h3 class="text-account">Configuración de cuenta</h3>
        <hr class="linea-separadora"/> 
        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="username" class="form-label">Nombre de usuario:</label>
                <input type="text" id="username"  class="form-control" name="username" value="{{user.username}}" readonly>
            </div>

            <div class="col-md-6 mb-3">
                <label for="email" class="form-label">Correo electrónico:</label>
                <input type="email" id="email"  class="form-control" name="email" value="{{user.email}}" readonly>
            </div>

            <div class="col-md-6 mb-3">
                <label for="password" class="form-label">Contraseña actual:</label>
                <input type="password" id="password"  class="form-control" placeholder="********" name="password" required>
            </div>

            <div class="col-md-6 mb-3">
                <label for="newPassword" class="form-label">Nueva contraseña:</label>
                <input type="password" id="newPassword"  class="form-control"  placeholder="********" name="newPassword" required>
            </div>

            <div class="col-md-6 mb-3">
                <label for="confirmNewPassword" class="form-label">Confirmar nueva contraseña:</label>
                <input type="password" id="confirmNewPassword"  class="form-control"  placeholder="********" name="confirmNewPassword" required>
            </div>
        </div>      

        <button type="submit"  class="btn btn-primary"><img src="http://localhost:3000/svg/guardar-configuracion.svg"/> Guardar cambios</button>
    </form>
</div>
