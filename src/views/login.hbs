{{#unless isLoggedIn}}
<div class="login-container-wrapper">
  <div class="img-container text-img"> <img src="http://localhost:3000/img/logo_urobsalud.png" alt="Editar paciente" class="iccon" /> UrobSalud</div>
  <div class="login-container">
    
      <div id="login-box" class="login-box">
        <form class="login-form" action="/login" method="post">
          <h3 class="login-text"> Iniciar Sesion</h3>
          <div class="mb-3">
            <input class="login-input" type="text"  id="username" name="username"placeholder="Nombre de usuario" required>
          </div>
          <div class="mb-3">
            <input class="login-input" type="password"  id="password" name="password" placeholder="Ingrese su contraseña"required>
          </div>
          <div class="row mb-3">
            <div class="col-md-6">
               <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="false" name="flexCheckDefault" id="flexCheckDefault">
                  <label class="form-check-label" for="flexCheckDefault">
                    Mantener la sesión iniciada
                  </label>
                </div>
            </div>
            <div class="col-md-6 mb-2">
              <a href="/login" id="forget" class="text-forgot" data-toggle="flip">Olvidé mi contraseña?</a>
            </div>
          </div>
         {{#if errorMessage}}
            <div class="mb-3 text-alert" role="alert">
              {{errorMessage}}
            </div>
          {{/if}}
          <div class="btn-container">
            <button type="submit" id="login-button" class="btn-login"> <i class="fa-solid fa-right-to-bracket fa-xs"></i>  Iniciar Sesión</button>
          </div>
        </form>

        <form class="forget-form" action="/login">
          <h3 class="login-text "><ion-icon size="large" name="lock-closed"></ion-icon> Olvidaste tu constraseña?</h3>
          <div class="mb-3">
            <input class="login-input" type="text" placeholder="Ingrese su Email">
          </div>

          <div class="mb-3 btn-container">
            <button class="btn-login d-block"><i class="fa-regular fa-paper-plane fa-xs"></i> Enviar</button>
          </div>
          <div class="mb-3 mt-3">
            <a href="#" id="volver" class="text-forgot" data-toggle="flip"><i class="fa-solid fa-arrow-left" style="color: #0697c7;"></i> Volver al Login</a>
          </div>
        </form>
      </div>
   
  </div>

</div>
 {{/unless}}