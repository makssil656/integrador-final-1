<div class="mt-3">
  <h1>Pacientes</h1>
</div>
<hr />
<div
  class="table-responsive container justify-content-center align-items-center col-lg-10"
>
  <table id="tabla1" class="">
    <thead>
      <tr>
        <th>DNI</th>
        <th>Apellidos</th>
        <th>Nombres</th>
        <th>Edad</th>
        <th>Sexo</th>
        <th>Orientación</th>
        <th>Celular</th>
        <th>Fecha Nac.</th>
        <th>Dirección</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each pacientes}}
        <tr>
          <td>{{DNI}}</td>
          <td>{{apellidos}}</td>
          <td>{{nombres}}</td>
          <td>{{Edad}}</td>
          <td>{{Sexo}}</td>
          <td>{{orientacion_sex}}</td>
          <td>{{Celular}}</td>
          <td>{{moment Fecha_naci "DD-MM-YYYY"}}</td>
          <td>{{Direccion}}</td>
          <td>
            <div class="d-flex">
              <div class="d-inline icon">
                <a href="/pacientes/editar/{{_id}}" class="btn btn-primary"style="margin-right: 5px;">
                 <img src="http://localhost:3000/svg/editar_paciente.svg" alt="Editar paciente" class="iccon" />
                </a>
              </div>

              <div class="d-inline icon">
                <button
                  class="btn btn-danger"
                  data-bs-toggle="modal"
                  data-bs-target="#confirmDeleteModal"
                  data-nombre="{{nombres}} {{apellidos}}"
                  data-id="{{_id}}"
                >
                  <!-- Agregar el atributo 'data-nombre' -->
                  <img src="http://localhost:3000/svg/eliminar_paciente.svg" alt="Editar paciente" class="iccon" />
                </button>
              </div>
            </div>

          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<div class="mt-3">
  <button class="btn btn-primary">
    <a
      href="/pacientes/Agregar"
      style="color: white; text-decoration: none;"
    ><img src="http://localhost:3000/svg/agregar_paciente.svg" alt="Editar paciente" class="iccon" />Registrar paciente</a>
  </button>
</div>

<div
  class="modal fade"
  id="confirmDeleteModal"
  tabindex="-1"
  aria-labelledby="confirmDeleteModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmar
          Eliminación</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>¿Estás seguro de que deseas eliminar a
          <span id="patientNameToDelete"></span>?</p>
      </div>
      <div class="modal-footer d-flex">
        <div class="d-inline">
          <FORm>
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >Cancelar</button>
          </FORm>
        </div>
        <div class="d-inline">
          <form id="deleteForm" action="" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            <button type="submit" class="btn btn-danger">
              Eliminar
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>